{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build SFMLProject",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-I/opt/homebrew/Cellar/sfml/2.6.1/include",
                "main.cpp",
                "-o",
                "output/main",
                "-L/opt/homebrew/Cellar/sfml/2.6.1/lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-lsfml-audio"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        }
    ]
}
